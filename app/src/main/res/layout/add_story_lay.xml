<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bottom_sheet_back"
            android:layout_margin="10dp"
            android:padding="20dp"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Story"
                android:layout_marginBottom="15dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/nunito_sans_bold"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/storyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_edittext"
                android:hint="Story Name"
                android:textColorHint="#a9a9a9"
                android:textColor="#272626"
                android:padding="20dp"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_sans"
                android:lineSpacingExtra="5.3sp"
                />

            <EditText
                android:id="@+id/storySummary"
                android:textColorHint="#a9a9a9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/middle_edittext"
                android:hint="Story Summary"
                android:maxLines="3"
                android:lines="2"
                android:gravity="top|left"
                android:textColor="#272626"
                android:padding="20dp"
                android:textSize="15sp"
                android:inputType="textMultiLine"
                android:layout_marginTop="-2dp"
                android:fontFamily="@font/nunito_sans"
                android:lineSpacingExtra="5.3sp"
                />

            <EditText
                android:id="@+id/content"
                android:textColorHint="#a9a9a9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_edittext"
                android:hint="Story Content"
                android:maxLines="100"
                android:lines="10"
                android:gravity="top|left"
                android:textColor="#272626"
                android:padding="20dp"
                android:textSize="15sp"
                android:inputType="textMultiLine"
                android:layout_marginTop="-2dp"
                android:fontFamily="@font/nunito_sans"
                android:lineSpacingExtra="5.3sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/allround_editext">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/uploadImageView"
                    android:background="@drawable/message_back"/>

                <Button
                    android:id="@+id/uploadImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/uploadImageView"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:text="Upload Image"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_filled_back"
                android:layout_marginTop="20dp"
                android:elevation="3dp"
                android:padding="18dp"
                android:id="@+id/submit">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Submit"
                    android:textColor="#fff"
                    android:fontFamily="@font/nunito_sans"
                    android:textSize="20sp"
                    android:drawablePadding="7dp"
                    app:drawableEndCompat="@drawable/ic_right_arrow" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>