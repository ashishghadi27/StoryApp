<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    android:focusable="true"
    tools:context=".Fragments.FullStoryFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/topbar_back"
        android:padding="15dp"
        android:id="@+id/topbar"
        android:elevation="5dp">

        <TextView
            android:id="@+id/storyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stories"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:fontFamily="@font/nunito_sans_bold"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/mcqs"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mcq"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/assign"
            android:layout_marginEnd="20dp"
            />

        <ImageView
            android:id="@+id/assign"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/assign"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/topbar"
        android:id="@+id/videoLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <VideoView
            android:id="@+id/storyImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:elevation="5dp"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/videoLay"
        android:layout_margin="5dp"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/summLabel"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:textSize="20sp"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is small description of thr above category. Checkout"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_sans"
                android:layout_marginTop="10dp"
                android:textColor="#5C5959"
                android:background="@drawable/message_back"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/storyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Story"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/colorAccent"

                />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is small description of thr above category. Checkout"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_sans"
                android:layout_marginTop="10dp"
                android:textColor="#5C5959"
                android:background="@drawable/message_back"
                android:padding="10dp"
                android:layout_marginBottom="20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/mcqSec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go To MCQ Section"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nunito_sans_bold"/>

                <Button
                    android:id="@+id/assignSec"
                    android:layout_below="@id/mcqSec"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go To Assignment Section"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_sans_bold"/>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>